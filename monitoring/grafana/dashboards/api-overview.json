{
  "title": "Threads Bot API Overview",
  "panels": [
    {
      "title": "API Health",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"threads-bot-api\"}"
        }
      ]
    },
    {
      "title": "Request Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])"
        }
      ]
    },
    {
      "title": "Error Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_errors_total[5m])"
        }
      ]
    },
    {
      "title": "Tunnel Status",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "tunnel_connected"
        }
      ]
    }
  ]
} 